
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read for collections needed for login/general app function
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated can write
    }

    match /vehicles/{vehicleId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /locations/{locationId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Secure reports collection, only authenticated users can read/write.
    // Further rules can be added here (e.g., check for admin role)
    match /reports/{reportId} {
      allow read, write: if request.auth != null;
    }

    // A fallback rule is not strictly necessary with the above, but good practice.
    // This will match any collection not explicitly defined above.
    match /{path=**} {
       allow read, write: if request.auth != null;
    }
  }
}
