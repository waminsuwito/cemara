rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access for data needed on the login page
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /vehicles/{vehicleId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /locations/{locationId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Reports are sensitive and should only be read/written by authenticated users
    match /reports/{reportId} {
      allow read, write: if request.auth != null;
    }
  }
}
