rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access for login and initial data population.
    // Writes are protected and require authentication.
    match /{collection}/{doc} where collection in ['users', 'vehicles', 'locations'] {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Reports are sensitive and can only be read or written by authenticated users.
    match /reports/{reportId} {
      allow read, write: if request.auth != null;
    }
  }
}