rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Hanya izinkan akses baca dan tulis jika pengguna sudah login.
    // Ini adalah aturan keamanan dasar yang penting untuk produksi.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
