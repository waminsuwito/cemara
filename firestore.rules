rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read for login, but secure writes for admins.
    match /users/{userId} {
      allow read: if true;
      allow write: if true; // In a real app, this should be secured.
    }
    match /vehicles/{vehicleId} {
      allow read: if true;
      allow write: if true; // In a real app, this should be secured.
    }
    match /locations/{locationId} {
      allow read: if true;
      allow write: if true; // In a real app, this should be secured.
    }

    // Allow read/write to reports. The app's own logic gatekeeps this.
    match /reports/{reportId} {
      allow read, write: if true;
    }
  }
}
