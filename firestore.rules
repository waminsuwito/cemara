rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // This rule allows anyone to read and write to your database.
    // It's set up this way to ensure the custom authentication flow works.
    // For a production app, you would want more granular security.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
